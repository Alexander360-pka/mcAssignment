<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bubble color (usually your app's primary color) -->
    <solid android:color="#2196F3" />  <!-- Blue color - change as needed -->

    <!-- Rounded corners -->
    <corners
        android:topLeftRadius="16dp"
        android:topRightRadius="4dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="16dp"/>

    <!-- Optional shadow -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>